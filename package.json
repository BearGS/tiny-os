{
  "name": "tiny-os",
  "version": "0.0.1",
  "description": "a tool",
  "main": "dist/tiny-os.umd.min.js",
  "module": "dist/tiny-os.esm.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "build": "NODE_ENV=production rimraf dist & node scripts/rollup/index.js",
    "test-build": "NODE_ENV=development node scripts/rollup/index.js",
    "start": "NODE_ENV=development node scripts/webpack/start.js & node example/server.js",
    "lint:fix": "eslint --fix .js,.jsx,.ts,.tsx src  --ignore-pattern '!.eslintrc.js'",
    "lint": "eslint -f 'stylish' --ext .js,.jsx,.ts,.tsx src  --ignore-pattern '!.eslintrc.js'",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "is-plain-object": "^2.0.4",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "live-server": "^1.2.0",
    "ora": "^3.0.0",
    "react": "^16.4.2",
    "react-dev-utils": "^5.0.2",
    "react-hot-loader": "^4.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.59.1",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "uglify-es": "^3.3.9",
    "webpack": "^4.17.1",
    "webpack-config": "^7.5.0",
    "webpack-dev-server": "^3.1.7"
  },
  "repository": {
    "type": "git",
    "url": "tiny-os"
  },
  "keywords": [
    "tiny-os"
  ],
  "author": "xgs",
  "license": "MIT",
  "jest": {
    "testRegex": "src/__test__/[^/]*(\\.js|\\.coffee|[^d]\\.ts)$",
    "globals": {
      "__DEV__": true,
      "__TEST__": true
    }
  },
  "pre-commit": {
    "run": "lint-staged",
    "silent": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "NODE_ENV=test jest --bail --findRelatedTests",
      "git add"
    ]
  }
}
